LABEL version="1.0"

FROM node:18-alpine

# 設定工作目錄
WORKDIR /app

# 直接建立 next.js example app（hello-world）
RUN npx create-next-app@latest hello-world -e hello-world --no-install

# 進入 app 資料夾
WORKDIR /app/hello-world

# 安裝依賴
RUN npm install

# 建置
RUN npm run build

# 開放 port
EXPOSE 3000

# 啟動 production 模式
CMD ["npm", "start"]
