FROM python:3.12-slim

# 安裝必要的系統套件
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# 設定工作目錄
WORKDIR /app

# 複製 mitmproxy 相關程式碼 (如果有的話)
COPY . .

# 安裝 mitmproxy
RUN pip install --no-cache-dir mitmproxy

# 設定 mitmproxy 的啟動指令
ENTRYPOINT ["mitmproxy", "--mode", "transparent"]

# (可選) 設定暴露的端口
EXPOSE 8080
EXPOSE 8081